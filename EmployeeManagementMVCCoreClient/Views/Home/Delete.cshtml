@model EmployeeManagementMVCCoreClient.ViewModels.EmployeeDeleteViewModel

@{
    ViewData["Title"] = "Delete";
    var photoPath = "~/images/" + (Model.ExistingPhotoPath ?? "noimage.jpg");
}


<h1>Delete</h1>

<h3>Are you sure you want to delete the below employee ?</h3>

<form enctype="multipart/form-data" asp-controller="Home" asp-action="delete" method="post" class="mt-3">
    <input hidden asp-for="Id" />
    <input hidden asp-for="ExistingPhotoPath" />

    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" readonly class="form-control" placeholder="Id" />
        </div>

    </div>

    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" readonly class="form-control" placeholder="Name" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" readonly class="form-control" placeholder="Email" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Department" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Department" readonly class="form-control" placeholder="Department" />
        </div>

    </div>


    <div class="form-group row col-sm-4 offset-4">
        <img src="@photoPath" class="imageThumbnail" asp-append-version="true" />
    </div>


    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-controller="Home" asp-action="index" class="btn btn-primary">Cancel</a>
        </div>

    </div>

    @section Scripts{
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }

</form>

